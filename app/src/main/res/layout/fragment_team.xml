<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.TeamFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/TeamHeader"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="Team X" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/TeamOnePlayerRecycler"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/TeamHeader"
        android:layout_marginTop="5dp"
        tools:layout_editor_absoluteX="8dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/TeamTwoPlayerRecycler"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/TeamOnePlayerRecycler"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="71dp"
        android:layout_marginTop="5dp"
        tools:layout_editor_absoluteX="8dp" />

</RelativeLayout>